<h4>
  {{#if eft}}    Kontoinhaber:{{/if}}
  {{#if wcp}}    Daten des Karteninhabers:{{/if}}
  {{#if paypal}} Daten zur Spende:{{/if}}
  {{#if giropay}}Kontoinhaber:{{/if}}
</h4>
<fieldset>
  <div class="form-group first-name">{{input value=payment.firstName class="form-control" placeholder="Vorname" }}</div>
  <div class="form-group last-name" >{{input value=payment.lastName  class="form-control" placeholder="Nachname" }}</div>
  <div class="form-group email"     >{{input value=payment.email     class="form-control" placeholder="E-Mail" }}</div>

  <div class="form-group street"    >{{input value=payment.street     class="form-control" placeholder="Stra√üe, Hausnummer" }}</div>
  <div class="form-group zip"       >{{input value=payment.zip        class="form-control" placeholder="PLZ" }}</div>
  <div class="form-group city"      >{{input value=payment.city       class="form-control" placeholder="Stadt" }}</div>
  <div class="form-group country"   >{{view "select" content=countries value=payment.country class="form-control"}}</div>
</fieldset>
